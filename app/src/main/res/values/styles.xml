<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="textColorDefault">
        <item name="android:textColor">@color/defaultColor</item>
    </style>
    <style name="button_style">
        <item name="android:textColor">@drawable/btn_color</item>
        <item name="android:background">@drawable/button_select</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="dialog_text">
        <item name="android:drawableLeft">@mipmap/error</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
