<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_white"
    android:orientation="vertical">

    <TextView
        style="@style/textColorDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/comunication_choice"
        android:textSize="16sp"
        android:visibility="gone" />

    <RadioGroup
        android:id="@+id/rg_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/radio_door_magnet"
            style="@style/textColorDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/door_magnet" />

        <RadioButton
            android:id="@+id/radio_manhole_cover"
            style="@style/textColorDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/manhole_cover" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/pcba_lable"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_pcba_lable"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/qmui_config_color_gray_1"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView3"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/device_id" />

    <EditText
        android:id="@+id/edit_device_id"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:imeOptions="actionSearch"
        android:inputType="number"
        android:nextClusterForward="@+id/edit_device_id"
        android:nextFocusUp="@+id/edit_device_id"
        android:nextFocusDown="@+id/edit_device_id"
        android:nextFocusForward="@+id/edit_device_id"
        android:singleLine="true"
        android:textColor="@color/qmui_config_color_gray_1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView4"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/imei_number" />

    <EditText
        android:id="@+id/edit_imei_number"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColor="@color/qmui_config_color_gray_1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView5"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/carrier_identification" />

    <EditText
        android:id="@+id/edit_carrier_identification"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:imeOptions="actionSearch"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@color/qmui_config_color_gray_1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView7"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bleMacAddress" />

    <EditText
        android:id="@+id/edit_bleMac"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@color/qmui_config_color_gray_1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView8"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/simNum"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_simNum"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:textSize="12sp"
        android:visibility="gone"

        />

    <TextView
        android:id="@+id/textView6"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date_now" />

    <EditText
        android:id="@+id/edit_data_now"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:imeOptions="actionSearch"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColor="@color/qmui_config_color_gray_1"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button_shell_printLable"
        style="@style/button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/printer_lable"
        android:textColor="@color/colorPrimary" />

</LinearLayout>