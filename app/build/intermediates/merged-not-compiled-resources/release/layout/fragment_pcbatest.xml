<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_white"
    android:orientation="vertical">

    <TextView
        android:visibility="gone"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/serial_port_config"
        android:textSize="16sp" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/L_serial_port"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView"
                style="@style/textColorDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/serial_port" />

            <EditText
                android:id="@+id/edit_serial_port"
                style="@style/textColorDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:inputType="textPersonName" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/L_baud_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView7"
                style="@style/textColorDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/baud_rate" />

            <EditText
                android:id="@+id/edit_baud_rate"
                style="@style/textColorDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:inputType="number"
                android:text="11520" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/comunication_choice"
        android:textSize="16sp"
        android:visibility="gone" />

    <RadioGroup
        android:id="@+id/rg_communication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/radio_chinanet"
            style="@style/textColorDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/chinanet"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/radio_unicom"
            style="@style/textColorDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/unicom"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/radio_mobile"
            style="@style/textColorDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mobile"
            android:visibility="gone" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView9"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"

        android:text="@string/device_id"
        android:textSize="16sp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_device_number"
            style="@style/textColorDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:nextFocusDown="@+id/edit_device_number"
            android:nextFocusForward="@+id/edit_device_number"
            android:nextFocusUp="@+id/edit_device_number"
            android:nextClusterForward="@+id/edit_device_number"
            android:singleLine="true"
            android:layout_weight="1"
            android:inputType="number" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_testADC"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/button_adc" />
        <Button
            android:id="@+id/button_testMENCI"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/button_menci" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/imei"
        android:textSize="16sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_imei"
        style="@style/textColorDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_startTest"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/start_test" />

        <Button
            android:id="@+id/button_printLable"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/printer_lable" />

        <Button
            android:id="@+id/button_clear"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/clear" />
    </LinearLayout>

    <TextView
        android:id="@+id/et_send"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/View1"
        android:gravity="top"
        android:hint="发送数据："
        android:imeOptions="actionGo"
        android:inputType="textMultiLine"
        android:textSize="20sp" />

</LinearLayout>
